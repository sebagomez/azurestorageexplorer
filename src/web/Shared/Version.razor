@code {
	[Parameter]
	public string Class { get; set; } = "parent";
	public string CurrentVersion { get => GetVersion(); }

	private string GetVersion()
	{
		string? envVer = Environment.GetEnvironmentVariable("APPVERSION");
		if (!(envVer is null))
			return envVer;

		Assembly assembly = Assembly.GetExecutingAssembly();
		System.Version? assVer = assembly.GetName().Version;
		return $"{assVer!.Major}.{assVer!.Minor}.{assVer!.Build}";
	}
}